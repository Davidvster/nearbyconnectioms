<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="30dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/element_layout">

    <android.support.v7.widget.CardView
        android:id="@+id/message_content_user_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_message_bg"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:id="@+id/message_content_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/message_content_date"
                    tools:text="UserName" />

                <TextView
                    android:id="@+id/message_content_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    app:layout_constraintStart_toEndOf="@+id/message_content_user"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="2.5.2018 2:55" />

            <TextView
                android:id="@+id/message_content_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAlignment="textStart"
                android:paddingLeft="16dp"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/message_content_user"
                tools:text="Oasdasdasdas"/>

            <ImageView
                android:id="@+id/message_content_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds= "true"
                android:paddingLeft="16dp"
                android:paddingBottom="10dp"
                android:paddingRight="16dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/message_content_user"
                tools:src="@drawable/ic_launcher_img"
                tools:visibility="visible"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>